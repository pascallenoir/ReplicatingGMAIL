<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReplicatingGMAIL.Views.ContentViewTemplate.EnteteFlyOutItems">
  <ContentView.Content>
        <StackLayout HeightRequest="60"
                     BackgroundColor="{StaticResource BackgroundMenu}">

            <!-- Titre du menu tiroir de l'application -->
            <Label Text="Gmail"
                       Padding="30,10"
                       TextColor="{StaticResource RedTextColor}"
                       FontAttributes="None"
                       FontSize="{x:OnPlatform Android=18, iOS=Medium}"
                       HorizontalOptions="StartAndExpand"
                       VerticalOptions="CenterAndExpand"/>

            <!-- ligne de separation -->
            <BoxView
                  HeightRequest="1"
                  HorizontalOptions="FillAndExpand"
                  Color="LightGray"
                  VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>